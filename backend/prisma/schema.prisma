// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Upvote {
  id          String       @id @default(uuid())
  createdAt   DateTime  @default(now())
  blueprint   Blueprint @relation(fields: [blueprintId], references: [id])
  blueprintId String
  user        User      @relation(fields: [userId], references: [id])
  userId      String
}

model Comment {
  id          String       @id @default(uuid())
  createdAt   DateTime  @default(now())
  content     String?
  author      User      @relation(fields: [authorId], references: [id])
  authorId    String
  blueprint   Blueprint @relation(fields: [blueprintId], references: [id])
  blueprintId String
}

model Blueprint {
  id          String       @id @default(uuid())
  title       String
  description String?
  fileLinks   String[]
  imageLinks  String[]
  categories  String[]
  comments    Comment[]
  upvotes     Upvote[]
  designer    User      @relation(fields: [designerId], references: [id])
  designerId  String       @unique
}

model User {
  id         String         @id @default(uuid())
  email      String      @unique
  username   String
  password   String
  comments   Comment[]
  blueprints Blueprint[]
  upvotes    Upvote[]
}